<% if @menu.image.attached? %>
  <%= image_tag @menu.image, size: "300x300" %>
<% else %>
  <%= image_tag "no_image", size: "300x300" %>
<% end %>
<dl class="menu_show">
  <dt>商品名</dt>
  <dd><%= @menu.name %><d>
</dl>
  <dt>価格(税込)</dt>
  <dd>¥<%= @menu.price %>(¥<%= @menu.with_tax_price %>)</dd>
</dl>
<dl>
  <dt>ジャンル</dt>
  <dd><%= @menu.genre.name %></dd>
</dl>
