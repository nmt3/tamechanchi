<div class="user_inquiry">
 <h2>お問い合せ</h2>
 <%= form_with model: Inquiry.new do |f| %>
  <ul class="user_inquiry_form">
   <li>
    <%= f.label "名前" %>
    <%= f.text_field :name %>
   </li>
   <li>
    <%= f.label "件名" %>
    <%= f.text_field :title %>
   </li>
   <li>
    <%= f.label "お問い合わせ内容" %>
    <%= f.text_area :content %>
   </li>
   <li>
    <%= f.label "電話番号" %>
    <%= f.text_field :phone %>
   </li>
   <li>
    <%= f.label "メールアドレス" %>
    <%= f.text_field :mail %>
   </li>
    <li>
    <%= f.submit "送信" %>
   </li>
  </ul>
 <% end %>
</div>