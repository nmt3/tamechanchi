<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>

<table class="genre">
  <tr>
    <td>No</td>
    <td>ジャンル名</td>
  </tr>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %></td>
      <td><%= genre.name %></td>
      <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
      <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>