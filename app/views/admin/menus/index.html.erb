<%= link_to "メニュー追加", new_admin_menu_path %>
<div class="mg_seach">
  <p>ジャンル検索</p>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <% if genre.present? == true %>
        <td>
          <%= link_to genre.name, admin_menus_path(genre_id: genre.id), class: "text-secondary" %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</div>

<div class="m_content">
  <h2>メニュー一覧</h2>
  <%= link_to "一覧へ戻る",  admin_menus_path %>
  <div class="m_list">
    <% @menus.each do |menu| %>
      <table class="menu">
        <%= link_to admin_menu_path(menu.id) do %>
          <%= menu.name %>
        <% end %>
        ¥<%= menu.price %>
      </table>
    <% end %>
  </div>
</div>