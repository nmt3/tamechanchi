<%= form_with model: @menu, url: admin_menus_path do |f| %>
  <table class="menu_new">
    <tr>
      <td>画像</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>価格</td>
      <td><%= f.text_field :price %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
      <%= link_to "ジャンル追加へ", admin_genres_path %>
    </tr>
    <tr>
      <td><%= f.submit "保存" %></td>
    </tr>
  </table>
<% end %>