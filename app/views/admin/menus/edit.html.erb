<%= form_with model: @menu, url: admin_menu_path(@menu.id) do |f| %>

  <%= f.label "画像" %>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.label "商品名" %>
  <%= f.text_field :name %>

  <%= f.label "価格" %>
  <%= f.text_field :price %>

  <%= f.label "ジャンル" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>

  <%= f.submit "変更する" %>
  <%= link_to "削除する", admin_menu_path, method: :delete %>
<% end %>