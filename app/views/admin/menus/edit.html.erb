<%= form_with model: @menu, url: admin_menu_path(@menu.id) do |f| %>
  <dl>
    <dt><%= f.label "画像" %></dt>
    <dd><%= f.file_field :image, accept: "image/*" %></dd>
  </dl>
  <dl>
    <dt><%= f.label "商品名" %></dt>
    <dd><%= f.text_field :name %></dd>
  </dl>
  <dl>
    <dt><%= f.label "価格" %></dt>
    <dd><%= f.text_field :price %></dd>
  </dl>
  <dl>
    <dt><%= f.label "ジャンル" %></dt>
    <dd><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></dd>
  </dl>
  <%= f.submit "変更する" %>
  <%= link_to "削除する", admin_menu_path, method: :delete %>
<% end %>