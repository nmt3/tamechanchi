<%= link_to "編集する", edit_admin_menu_path(@menu.id) %>

<% if @menu.image.attached? %>
  <%= image_tag @menu.image, size: "300x300" %>
 <% else %>
  <%= image_tag "no_image", size: "300x300" %>
 <% end %>
<table class="menu_show">
  <tr>
    <td>商品名</td>
    <td><%= @menu.name %></td>
  </tr>
  <tr>
    <td>価格(税込)</td>
    <td>¥<%= @menu.price %>(¥<%= @menu.with_tax_price %>)</td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @menu.genre.name %></td>
  </tr>
</table>
